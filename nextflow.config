profiles {

  saga {

    process {

      executor = "slurm"

      clusterOptions = "--account=nn10082k"
      queue = "normal"

      withLabel: "require_gpu" {
        clusterOptions = "--account=nn10082k --gpus=1"
        queue = "a100"
        cpus = 8
      }

    }

    singularity {

      enabled = true
      autoMounts = true
      cacheDir = "work/containers"

    }

  }

}
